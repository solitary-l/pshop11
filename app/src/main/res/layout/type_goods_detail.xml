            android:layout_height="wrap_content"
            android:src="@drawable/c905" />

        <TextView
            android:id="@+id/type_goods_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ï¿¥79.00"
            android:textSize="35dp"
