            android:layout_below="@+id/type_goods"/>
        <ImageView
            android:id="@+id/type_goods1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/c901"
            android:layout_below="@+id/type_goods"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/type_goods_tv"/>
        <ImageView
