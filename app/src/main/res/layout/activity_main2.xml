<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pshop.Main2Activity">

    <LinearLayout
        android:id="@+id/tab_linear"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:id="@+id/linear_home"
            style="@style/TabLinear"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            >

            <ImageView
                style="@style/TabImageStyle"
                android:src="@drawable/home1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="商城"
                android:textColor="@drawable/text"
                style="@style/TabTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_Car"
            style="@style/TabLinear"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            >

            <ImageView
                style="@style/TabImageStyle"
                android:src="@drawable/car"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:text="购物车"
                android:textColor="@drawable/text"
                style="@style/TabTextStyle"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_User"
            style="@style/TabLinear"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp">

            <ImageView
                style="@style/TabImageStyle"
                android:src="@drawable/people"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:text="个人中心"
                android:textColor="@drawable/text"
                style="@style/TabTextStyle"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tab_linear">

    </FrameLayout>

</RelativeLayout>
